import tkinter as tk
from tkinter import messagebox

def on_click():
    name = entry.get()
    if name:
        messagebox.showinfo("Welcome", f"Welcome {name}")
    else:
        messagebox.showwarning("Input Error", "Please enter your name")


root = tk.Tk()
root.geometry("320x240")
root.title("Python workshop")


label = tk.Label(root, text="Welcome to Python class")
label.pack(pady=10)


entry = tk.Entry(root)
entry.pack(pady=5)


button = tk.Button(root, text="Click Me", bg="light yellow", command=on_click)
button.pack(pady=10)


root.mainloop()
